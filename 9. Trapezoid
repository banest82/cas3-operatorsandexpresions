{
    class Program
    {
        static void Main(string[] args)
        {
            double a = 0.222;
            double b = 0.333;
            double h = 0.555;
            double h1 = h / 2;
            double area = (a + b) * h1;

            Console.WriteLine(area);
            Console.ReadKey();
            

        }
    }
